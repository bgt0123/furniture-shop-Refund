# Environment Configuration Template
# Copy this file to .env and update the values

# Service Ports
SUPPORT_SERVICE_PORT=8000
REFUND_SERVICE_PORT=8001
FRONTEND_PORT=3000

# Database Paths
SUPPORT_DB_PATH=./support-service/support.db
REFUND_DB_PATH=./refund-service/refund.db

# CORS Settings
CORS_ORIGINS=http://localhost:3000

# Authentication Service
AUTH_SERVICE_URL=http://localhost:8080
AUTH_JWT_SECRET=your-secret-key-here

# Environment Mode
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# External Services (for development)
SHOP_SERVICE_URL=http://localhost:8081
MAIL_SERVICE_URL=http://localhost:8082