# Environment configuration
# Copy this file to .env and update values as needed

# Database
DATABASE_URL=sqlite:///./refund_service.db

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# External Services
ORDER_API_BASE_URL=https://order-api.example.com
PAYMENT_GATEWAY_API_BASE_URL=https://payment-api.example.com
PAYMENT_GATEWAY_API_KEY=your-api-key

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/refund_service.log

# Application
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000